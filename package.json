{
  "name": "emit-lite",
  "version": "0.0.0",
  "description": "Light weight event-emitter for Node.js and browser",
  "scripts": {
    "prebuild": "rimraf ./dist && mkdirp ./dist",
    "build:cjs": "babel index.js -o dist/emit-lite.cjs.js",
    "build:umd": "cross-env BABEL_ENV=umd babel index.js -o dist/emit-lite.js",
    "build:min": "cross-env BABEL_ENV=min babel index.js -o dist/emit-lite.min.js",
    "build": "npm run build:cjs && npm run build:umd && npm run build:min",
    "start": "npm test -- -w",
    "test": "mocha --require=babel-register test",
    "prepublish": "npm run build"
  },
  "main": "index.js",
  "browser": "dist/emit-lite.cjc.js",
  "files": [
    "dist",
    "README.md"
  ],
  "author": "cap32",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.12.0",
    "babel-plugin-transform-es2015-parameters": "^6.17.0",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-preset-babili": "^0.0.5",
    "babel-preset-stage-0": "^6.16.0",
    "cross-env": "^3.1.3",
    "eslint": "^3.8.1",
    "eslint-plugin-babel": "^3.3.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4"
  }
}
